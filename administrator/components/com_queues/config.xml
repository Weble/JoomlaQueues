<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
            name="queues"
            label="COM_QUEUES_CONFIG_GENERAL"
            description=""
            addfieldpath="/administrator/components/com_queues/Field"
    >
        <field
                name="default_bus"
                label="COM_QUEUES_CONFIG_DEFAULT_BUS_LBL"
                description="COM_QUEUES_CONFIG_DEFAULT_BUS_DESC"
                default="default"
                type="queuebuses"
        />
        <field
                name="default_transport"
                label="COM_QUEUES_CONFIG_DEFAULT_TRANSPORT_LBL"
                description="COM_QUEUES_CONFIG_DEFAULT_TRANSPORT_DESC"
                default="database"
                type="queuetransports"
        />
        <field
                name="failure_transport"
                label="COM_QUEUES_CONFIG_FAILURE_TRANSPORT_LBL"
                description="COM_QUEUES_CONFIG_FAILURE_TRANSPORT_DESC"
                default="failure"
                type="queuetransports"
        />
        <field
                name="allow_no_handlers"
                label="COM_QUEUES_CONFIG_ALLOW_NO_HANDLERS_LBL"
                description="COM_QUEUES_CONFIG_ALLOW_NO_HANDLERS_DESC"
                default="1"
                type="lust"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>
    <fieldset
            name="retry_strategy"
            label="COM_QUEUES_CONFIG_RETRY_STRATEGY"
            description=""
    >
        <field
                name="max_retries"
                label="COM_QUEUES_CONFIG_MAX_RETRIES_LBL"
                description="COM_QUEUES_CONFIG_MAX_RETRIES_DESC"
                default="3"
                type="number"
        />
        <field
                name="retry_delay"
                label="COM_QUEUES_CONFIG_RETRY_DELAY_LBL"
                description="COM_QUEUES_CONFIG_RETRY_DELAY_DESC"
                default="1000"
                type="number"
        />
        <field
                name="retry_multiplier"
                label="COM_QUEUES_CONFIG_RETRY_MULTIPLIER_LBL"
                description="COM_QUEUES_CONFIG_RETRY_MULTIPLIER_DESC"
                default="1"
                type="number"
        />
        <field
                name="max_retry_delay"
                label="COM_QUEUES_CONFIG_MAX_RETRY_DELAY_LBL"
                description="COM_QUEUES_CONFIG_MAX_RETRY_DELAY_DESC"
                default="0"
                type="number"
        />
    </fieldset>
    <fieldset
            name="permissions"
            label="JCONFIG_PERMISSIONS_LABEL"
            description="JCONFIG_PERMISSIONS_DESC"
    >
        <field
                name="rules"
                type="rules"
                label="JCONFIG_PERMISSIONS_LABEL"
                filter="rules"
                validate="rules"
                component="com_queues"
                section="component"
        />
    </fieldset>
</config>
